<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile | URL Shortener</title>
    <link rel="stylesheet" href="/css/profile.css" />
  </head>
  <style>
    /* ðŸŒˆ Base Styles */
    body {
      margin: 0;
      font-family: "Poppins", sans-serif;
      color: #fff;
      overflow: hidden;
      height: 100vh;
      position: relative;
    }

    /* Background Image with Overlay */
    .background-image {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: url("https://images.unsplash.com/photo-1507525428034-b723cf961d3e?auto=format&fit=crop&w=1920&q=80")
        no-repeat center center / cover;
      filter: brightness(0.5);
      z-index: -2;
    }

    /* Profile Container */
    .profile-container {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      padding: 20px;
      z-index: 1;
      position: relative;
    }

    /* Glass Profile Card */
    .profile-card {
      background: rgba(255, 255, 255, 0.08);
      backdrop-filter: blur(20px);
      border-radius: 25px;
      padding: 40px 30px 60px 30px;
      max-width: 400px;
      width: 100%;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.4);
      text-align: center;
      position: relative;
      transition: transform 0.3s;
    }
    .profile-card:hover {
      transform: translateY(-8px);
    }

    /* Decorative Top Image */
    .card-top-image img {
      width: 100%;
      height: 120px;
      object-fit: cover;
      border-radius: 20px 20px 0 0;
      margin-bottom: 20px;
    }

    /* Avatar */
    .avatar-wrapper {
      margin-top: -60px;
      margin-bottom: 20px;
    }
    .avatar-wrapper img {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      border: 3px solid #00d4ff;
      object-fit: cover;
      background: #fff;
    }

    /* User Info */
    .profile-card h2 {
      font-size: 2rem;
      margin: 10px 0 5px 0;
    }
    .username,
    .email {
      color: #cfd8e3;
      margin: 3px 0;
    }

    /* Button */
    .btn {
      margin-top: 25px;
      background: linear-gradient(135deg, #00d4ff, #0078ff);
      border: none;
      padding: 12px 30px;
      border-radius: 30px;
      color: white;
      font-weight: 600;
      font-size: 1rem;
      cursor: pointer;
      transition: 0.3s;
      width: 100%;
    }
    .btn:hover {
      transform: scale(1.05);
    }

    /* Responsive */
    @media (max-width: 768px) {
      .profile-card {
        padding: 30px 20px 50px 20px;
        max-width: 90%;
      }
      .avatar-wrapper img {
        width: 100px;
        height: 100px;
      }
      .profile-card h2 {
        font-size: 1.6rem;
      }
      .card-top-image img {
        height: 100px;
      }
    }
  </style>
  <body>
  
    <!-- Background Image with Overlay -->
    <div class="background-image"></div>

    <div class="profile-container">
      <!-- Glass Profile Card -->
      <div class="profile-card">
        <!-- Decorative image at top -->
        <div class="card-top-image">
          <img
            src="https://images.unsplash.com/photo-1507525428034-b723cf961d3e?auto=format&fit=crop&w=600&q=80"
            alt="Decorative"
          />
        </div>

        <!-- Avatar -->
        <div class="avatar-wrapper">
          <img
            src="https://images.unsplash.com/photo-1506794778202-cad84cf45f1d?auto=format&fit=crop&w=200&q=80"
            alt="Avatar"
          />
        </div>

        <!-- User Info -->
        <h2 id="firstName"></h2>
        <p id="username" class="username"></p>
        <p id="email" class="email"></p>

        <!-- Button -->
        <button onclick="location.href='/user/my-url'" class="btn">
          View My URLs
        </button>
      </div>
    </div>
  </body>
  <script>
    const user = JSON.parse(localStorage.getItem("userData"));
    console.log(user);
    document.getElementById("firstName").innerHTML = user.firstName + " " + user.lastName;
    document.getElementById("username").innerHTML = user.username; 
    document.getElementById("email").innerHTML = user.email;

  </script>
</html>
